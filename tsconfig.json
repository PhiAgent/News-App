{
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es6"
        ],
        "outDir": "./dist/",
        "jsx": "react-jsx",
        "target": "es5",
        "allowJs": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "noEmit": true
    },
    "include": [
        "./src/**/*",
        "./server/**/*"
    ]
}
